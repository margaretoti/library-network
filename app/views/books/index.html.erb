<h1 class="page-title"><%= t('.header') %></h1>

<% if current_user&.admin %>
  <%= link_to t('.add_new_book_link'), new_book_path %>
<% end %>

<ul class="books">
  <% @books.each do |book| %>
    <li>
      <%= t('simple_form.labels.title') %>
      <%= book.title %> ,
      <%= t('simple_form.labels.author') %>
      <%= book.author %>
      <% if current_user&.admin %>
        <%= link_to t('books.edit.link'), edit_book_path(book) %>
        <%= delete_book_link(book) %>
      <% end %>
    </li>
  <% end %>
</ul>
