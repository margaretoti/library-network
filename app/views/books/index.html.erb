<h1 class="page-title"><%= t('.header') %></h1>

<%= link_to t('.add_new_book_link'), new_book_path %>

<ul class="books">
  <% @books.each do |book| %>
    <li>
      <%= t('simple_form.labels.title') %>
      <%= book.title %> ,
      <%= t('simple_form.labels.author') %>
      <%= book.author %>
      <%= link_to 'Edit', edit_book_path(book) %>
      <%= link_to 'Delete', book, method: :delete,
                                  data: { confirm: 'Are you sure?'} %>
    </li>
  <% end %>
</ul>
